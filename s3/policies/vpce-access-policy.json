{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowVPCEndpointAccess",
            "Effect": "Allow",
            "Principal": "*",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:ListBucket",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::${bucket_name}",
                "arn:aws:s3:::${bucket_name}/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:sourceVpce": "${vpce_id}"
                }
            }
        },
        {
            "Sid": "DenyNonVPCEndpointAccess",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::${bucket_name}",
                "arn:aws:s3:::${bucket_name}/*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "aws:sourceVpce": "${vpce_id}"
                }
            }
        }
    ]
}
